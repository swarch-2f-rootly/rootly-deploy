# Rootly Platform - Test Environment Variables
# This file contains environment variables specifically for integration testing

# ============================================================================
# INFLUXDB CONFIGURATION (Test instance)
# ============================================================================
INFLUXDB_PORT=8086
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=admin123
INFLUXDB_ORG=rootly-test
INFLUXDB_BUCKET=agricultural_data_test
INFLUXDB_TOKEN=test-super-secret-influx-token
INFLUXDB_URL=http://influxdb-test:8086
DOCKER_INFLUXDB_INIT_MODE=setup
DOCKER_INFLUXDB_INIT_USERNAME=admin
DOCKER_INFLUXDB_INIT_PASSWORD=admin123
DOCKER_INFLUXDB_INIT_ORG=rootly-test
DOCKER_INFLUXDB_INIT_BUCKET=agricultural_data_test
DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=test-super-secret-influx-token

# ============================================================================
# MINIO CONFIGURATION (Test instance)
# ============================================================================
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9101
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=admin123
MINIO_ENDPOINT=minio-test:9000
MINIO_BUCKET=raw-data-test
MINIO_USE_SSL=false

# ============================================================================
# APPLICATION SETTINGS (Test specific)
# ============================================================================
APP_NAME=Rootly Test Platform
APP_VERSION=1.0.0-test
DEBUG=true
ENVIRONMENT=test

# ============================================================================
# SERVER SETTINGS (Test ports)
# ============================================================================
HOST=0.0.0.0
SERVERS_INTERNAL_PORT=8000
DATA_MANAGEMENT_EXTERNAL_PORT=8102

# ============================================================================
# CORS CONFIGURATION (Test)
# ============================================================================
CORS_ORIGINS=*

# ============================================================================
# LOGGING CONFIGURATION (Test)
# ============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ============================================================================
# EXTERNAL ACCESS CONFIGURATION (Test)
# ============================================================================
HOST_IP=host.docker.internal
